<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the paper format for dot matrix printer (if not already defined in other files) -->
        <record id="paperformat_dpm_invoice_dot_matrix" model="report.paperformat">
            <field name="name">DPM Invoice Dot Matrix Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">279</field>  <!-- 11 inches in mm -->
            <field name="page_width">241</field>   <!-- 9.5 inches in mm -->
            <field name="orientation">Portrait</field>
            <field name="margin_top">3</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">72</field>  <!-- Typical for dot matrix printers -->
        </record>

        <!-- Update the existing report for Credit Note -->
        <record id="dpm_cn_report" model="ir.actions.report">
            <field name="name">DPM Credit Note</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">dpm_invoice.dpm_cn_template</field>
            <field name="report_file">dpm_invoice.dpm_cn_template</field>
            <field name="print_report_name">'DPM Credit Note - %s' % (object.name)</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_dpm_invoice_dot_matrix"/>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly'))]"/>
            <field name="sequence" eval="-12"/>
        </record>

