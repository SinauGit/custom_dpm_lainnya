<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Template QWeb -->
        <template id="dpm_invoice_template">

            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <!-- Header -->
                    <div class="dpm-section">
                        <div class="dpm-header text-center">INVOICE</div>
                    </div>
                    
                    <main>
                        <div class="dpm-container">
                            <!-- Info Section -->
                            <div class="dpm-info-section">
                                <!-- Left Column -->
                                <div class="col-6">
                                    <p class="info-row">
                                        <span class="info-label">No</span>
                                        <span class="info-separator">:</span>
                                        <span class="info-value" t-esc="o.name"/>
                                    </p>
                                    <p class="info-row">
                                        <span class="info-label">Date</span>
                                        <span class="info-separator">:</span>
                                        <span class="info-value">
                                            <span t-if="o.invoice_date" t-esc="o.invoice_date.strftime('%d.%m.%y')"/>
                                            <span t-else="">-</span>
                                        </span>
                                    </p>
                                    <p class="info-row">
                                        <span class="info-label">Due Date</span>
                                        <span class="info-separator">:</span>
                                        <span class="info-value" t-esc="o.invoice_date_due.strftime('%d.%m.%y') or '-'"/>
                                    </p>
                                    <p class="info-row">
                                        <span class="info-label">Salesman</span>
                                        <span class="info-separator">:</span>
                                        <span class="info-value">
                                            <t t-set="employee_names" t-value="', '.join([emp.initial for emp in o.employee_id]) if o.employee_id else '-'"/>
                                            <span t-esc="employee_names"/>
                                        </span>
                                    </p>
                                </div>
                                
                                <!-- Right Column -->
                                <div class="col-6">
                                    <div class="customer-info">
                                        <p class="info-row">
                                            <span class="info-label">Cust No.</span>
                                            <span class="info-separator">:</span>
                                            <span class="info-value" t-esc="o.partner_id.ref or o.partner_id.id"/>
                                        </p>
                                        <p class="info-row">
                                            <span class="info-label">Name</span>
                                            <span class="info-separator">:</span>
                                            <span class="info-value" t-esc="o.partner_id.name or ''"/>
                                        </p>
                                        <p class="info-row">
                                            <span class="info-label">Address</span>
                                            <span class="info-separator">:</span>
                                            <span class="info-value">
                                                <span t-esc="o.partner_id.street or ''"/><br/>
                                                <span t-esc="o.partner_id.city or ''"/><span>, </span>
                                                <span t-esc="o.partner_id.country_id.name or ''"/>
                                            </span>
                                        </p>
                                        <p class="info-row">
                                            <span class="info-label">Telephone</span>
                                            <span class="info-separator">:</span>
                                            <span class="info-value" t-esc="o.partner_id.phone or ''"/>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Remarks Section -->
                            <div class="dpm-remarks">
                                <span class="remarks-label">Remarks:</span>
                                <span class="remarks-value">
                                    On Sales Orders <t t-esc="o.invoice_origin or 'No-Sales Order'"/>
                                    Based On Deliveries No. 
                                    <t t-set="picking" t-value="env['stock.picking'].search([('sale_id.name', '=', o.invoice_origin), ('state', '=', 'done')], limit=1)"/>
                                    <t t-esc="picking.name or 'Belum Di Validate'"/>.
                                    <br/>
                                    <t t-esc="o.narration or ''"/>
                                </span>
                            </div>

                            <!-- Table Section -->
                            <table class="dpm-table">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Brand - Model</th>
                                        <!-- <th class="text-center">Model</th> -->
                                        <th>Color</th>
                                        <th>Size</th>
                                        <th>Qty</th>
                                        <th>Unit Price</th>
                                        <th>Disc.(%)</th>
                                        <th>Disc.(Amount)</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Initialize a counter -->
                                    <t t-set="counter" t-value="0"/>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <!-- Increment the counter -->
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <tr>
                                            <td><span t-esc="counter"/></td>
                                            <td><span t-esc="line.product_id.name or 'No Brand - Model'"/></td>
                                            <!-- <td class="text-center"><span t-esc="line.product_id.default_code or ''"/></td> -->
                                            <td>
                                                <!-- Memperbaiki pemanggilan warna produk -->
                                                <span t-esc="', '.join(line.product_id.product_tmpl_id.attribute_line_ids.filtered(lambda x: x.attribute_id.name == 'Color').value_ids.mapped('name')) or 'Hitam'"/>
                                            </td>
                                            <td>
                                                <!-- Memperbaiki pemanggilan ukuran produk -->
                                                <span t-esc="', '.join(line.product_id.product_tmpl_id.attribute_line_ids.filtered(lambda x: x.attribute_id.name == 'Size').value_ids.mapped('name')) or 'L'"/>
                                            </td>
                                            <td>
                                                <span t-esc="'%.2f' % line.quantity"/>
                                            </td>
                                            <td>
                                                <span t-esc="line.price_unit or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td>
                                                <span t-esc="'%.2f' % (line.discount or 0.00)"/>
                                            </td>
                                            <td>
                                                <span t-esc="line.discount_fixed" t-options='{
                                                    "widget": "monetary",
                                                    "display_currency": o.currency_id,
                                                    "precision": 2
                                                }'/>
                                            </td>
                                            <td>
                                                <span t-esc="line.price_subtotal or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <!-- Summary Section -->
                            <div class="dpm-summary">
                                <div class="quantity-total">
                                    Total Quantity: <span t-esc="sum(int(line.quantity) for line in o.invoice_line_ids) or 0.00"/>
                                </div>
                                <div class="summary-details">
                                    <table class="summary-table">
                                        <!-- Total Gross -->
                                        <tr>
                                            <td>Subtotal</td>
                                            <td class="amount-cell">
                                                <span t-esc="sum(line.price_unit for line in o.invoice_line_ids) or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}' style="margin-right: 20px;"/>
                                            </td>
                                        </tr>
                                        <!-- Discount -->
                                        <tr>
                                            <td>Discount</td>
                                            <td class="amount-cell">
                                                <t t-set="total_discount" t-value="sum((line.price_unit * line.quantity * line.discount/100) for line in o.invoice_line_ids) or 0.00"/>
                                                <span t-esc="total_discount" t-options='{"widget": "monetary", "display_currency": o.currency_id}' style="margin-right: 20px;"/>
                                            </td>
                                        </tr>
                                        <!-- Ppn -->
                                        <tr>
                                            <td>VAT</td>
                                            <td class="amount-cell">
                                                <span t-foreach="o.invoice_line_ids.mapped('tax_ids')" t-as="tax" style="display: inline-block; text-align: center;">
                                                    <span t-esc="tax.display_name or ''" style="margin-right: 40px;"/>
                                                </span>
                                                <span t-esc="o.amount_tax or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}' style="margin-right: 20px;"/>
                                            </td>
                                        </tr>

                                        <!-- Biaya Kirim -->
                                        <tr>
                                            <td>Shipping</td>
                                            <td class="amount-cell">
                                                <!-- <span t-esc="int(o.delivery_cost or 0)" style="margin-right: 20px;"/> -->
                                            </td>
                                        </tr>
                                        <!-- Total Jumlah -->
                                        <tr>
                                            <td>Total </td>
                                            <td class="amount-cell">
                                                <span t-esc="o.amount_total or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}' style="margin-right: 20px;"/>
                                            </td>
                                        </tr>
                                       </table>
                                </div>
                            </div>

                            <!-- Signature Section -->
                            <div class="dpm-signature">
                                <span class="signature-label">Signature</span>
                                <span class="signature-line"></span>
                                <span class="signature-label">Date</span>
                                <span class="signature-line"></span>
                            </div>
                        </div>
                    </main>
                </t>
            </t>
        </template>

        <template id="report_my_invoice">
            <t t-call="web.html_container">
                <t t-call="dpm_invoice_template" t-lang="lang"/>
            </t>
        </template>
    </data>
</odoo>