<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template QWeb -->
        <template id="dpm_cn_template">
<t t-call="web.external_layout">
                <!-- Konten template yang sudah ada -->
                <t t-foreach="docs" t-as="o">
                    <main>
                        <div class="dpm-invoice">
                            <!-- Header -->
                            <div class="dpm-header">CREDIT NOTE</div>
                            
                            <!-- Content -->
                            <div class="content">
                                <!-- Info Section -->
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <div class="info-section">
                                            <div class="info-row">
                                                <span class="info-label" style="width: 80px; display: inline-block;">No</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value" t-esc="o.name"/>
                                            </div>
                                            <div class="info-row">
                                                <span class="info-label" style="width: 80px; display: inline-block;">Date</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value">
                                                    <span t-if="o.invoice_date" t-esc="o.invoice_date.strftime('%d.%m.%y')"/>
                                                    <span t-else="">-</span>
                                                </span>
                                            </div>
                                            <div class="info-row">
                                                <span class="info-label" style="width: 80px; display: inline-block;">Due Date</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value" t-esc="o.invoice_date_due.strftime('%d.%m.%y') or '-'"/>
                                            </div>
                                            <div class="info-row">
                                                <span class="info-label" style="width: 80px; display: inline-block;">Salesman</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value">
                                                    <t t-set="employee_names" t-value="', '.join([emp.initial for emp in o.employee_id]) if o.employee_id else '-'"/>
                                                    <span t-esc="employee_names"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-6">
                                        <div class="customer-info">
                                            <p class="info-row">
                                                <span class="info-label" style="width: 100px; display: inline-block;">Cust No.</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value" t-esc="o.partner_id.ref or o.partner_id.id"/>
                                            </p>
                                            <p class="info-row">
                                                <span class="info-label" style="width: 100px; display: inline-block;">Name</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value" t-esc="o.partner_id.name or ''"/>
                                            </p>
                                            <p class="info-row">
                                                <span class="info-label" style="width: 100px; display: inline-block;">Address</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value">
                                                    <span t-esc="o.partner_id.street or ''"/><br/>
                                                    <span t-esc="o.partner_id.city or ''"/><span>, </span>
                                                    <span t-esc="o.partner_id.country_id.name or ''"/>
                                                </span>
                                            </p>
                                            <p class="info-row">
                                                <span class="info-label" style="width: 100px; display: inline-block;">Telephone</span>
                                                <span class="info-separator" style="width: 10px; display: inline-block;">:</span>
                                                <span class="info-value" t-esc="o.partner_id.phone or ''"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Remarks Section -->
                                <div class="dpm-remarks">
                                    <span class="remarks-label">Remarks:</span>
                                    <span class="remarks-value">
                                        On Sales Orders <t t-esc="o.invoice_origin or 'No-Sales Order'"/>
                                        Based On Deliveries No. 
                                        <t t-set="picking" t-value="env['stock.picking'].search([('sale_id.name', '=', o.invoice_origin), ('state', '=', 'done')], limit=1)"/>
                                        <t t-esc="picking.name or 'Belum Di Validate'"/>.
                                        <br/>
                                        <t t-esc="o.narration or ''"/>
                                    </span>
                                </div>

                                <!-- Table -->
                                <table class="dpm-table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="col-no text-center">No</th>
                                            <th class="col-brand text-center">Brand - Model</th>
                                            <th class="col-color text-center">Color</th>
                                            <th class="col-size text-center">Size</th>
                                            <th class="col-qty text-center">Qty</th>
                                            <th class="col-price text-center">Unit Price</th>
                                            <th class="col-disc-percent text-center">Disc.(%)</th>
                                            <th class="col-disc-amount text-center">Disc.(Amount)</th>
                                            <th class="col-amount text-center">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Initialize a counter -->
                                        <t t-set="counter" t-value="0"/>
                                        <t t-foreach="o.invoice_line_ids" t-as="line">
                                            <!-- Increment the counter -->
                                            <t t-set="counter" t-value="counter + 1"/>
                                            <tr>
                                                <td class="text-center"><t t-esc="counter"/></td>
                                                <td class="text-center"><t t-esc="line.product_id.name or 'No Brand - Model'"/></td>
                                                <td class="text-center">
                                                    <t t-esc="', '.join(line.product_id.product_tmpl_id.attribute_line_ids.filtered(lambda x: x.attribute_id.name == 'Color').value_ids.mapped('name')) or 'Hitam'"/>
                                                </td>
                                                <td class="text-center">
                                                    <t t-esc="', '.join(line.product_id.product_tmpl_id.attribute_line_ids.filtered(lambda x: x.attribute_id.name == 'Size').value_ids.mapped('name')) or 'L'"/>
                                                </td>
                                                <td class="text-center"><t t-esc="'%.2f' % line.quantity"/></td>
                                                <td class="text-center">
                                                    <span t-esc="line.price_unit or 0.00" t-options='{
                                                        "widget": "monetary",
                                                        "display_currency": o.currency_id,
                                                        "position": "before"
                                                    }'/>
                                                </td>
                                                <td class="text-center"><t t-esc="'%.2f' % (line.discount or 0.00)"/></td>
                                                <td class="text-center">
                                                    <span t-esc="line.discount_fixed" t-options='{
                                                        "widget": "monetary",
                                                        "display_currency": o.currency_id,
                                                        "position": "before"
                                                    }'/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="line.price_subtotal or 0.00" t-options='{
                                                        "widget": "monetary",
                                                        "display_currency": o.currency_id,
                                                        "position": "before"
                                                    }'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>

                                <!-- Summary Section -->
                                <div class="summary-section">
                                    <div class="quantity-total">
                                        Total Quantity: <span t-esc="sum(int(line.quantity) for line in o.invoice_line_ids) or 0.00"/>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-8"></div>
                                        <div class="col-4">
                                            <table class="table-summary borderless">
                                                <tr>
                                                    <td class="no-border">Subtotal</td>
                                                    <td class="text-end no-border">
                                                        <span t-esc="sum(line.price_unit * line.quantity for line in o.invoice_line_ids) or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="no-border">Discount</td>
                                                    <td class="text-end no-border">
                                                        <t t-set="total_discount" t-value="sum((line.price_unit * line.quantity * line.discount/100) for line in o.invoice_line_ids) or 0.00"/>
                                                        <span t-esc="total_discount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="no-border">VAT</td>
                                                    <td class="text-end no-border">
                                                        <span t-foreach="o.invoice_line_ids.mapped('tax_ids')" t-as="tax">
                                                            <span t-esc="tax.display_name or ''"/>
                                                        </span>
                                                        <span t-esc="o.amount_tax or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="no-border">Shipping</td>
                                                    <td class="text-end no-border"></td>
                                                </tr>
                                                <tr>
                                                    <td class="no-border">Total</td>
                                                    <td class="text-end no-border">
                                                        <span t-esc="o.amount_total or 0.00" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <!-- Signature Section -->
                                <div class="signature-section">
                                    <strong>Signature</strong>
                                    <span class="signature-line"></span>
                                    <strong>Date</strong>
                                    <span class="signature-line"></span>
                                </div>
                            </div>
                        </div>
                    </main>
                </t>
            </t>
        </template>
        <template id="report_my_dn">
            <t t-call="web.html_container">
                <t t-call="dpm_cn_template" t-lang="lang"/>
            </t>
        </template>
    </data>
</odoo>